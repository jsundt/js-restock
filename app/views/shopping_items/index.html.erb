<h1 class="title"><%= @shopping_list.title %></h1>


<table class="shopping_items">
  <thead>
    <tr>
      <th width="25%">Completed?</th>
      <th width="65%">Content</th>
      <th width="10%">Functions</th>
    </tr>
  </thead>
  <tbody>
  <% @shopping_list.shopping_items.each do |todo_item| %>
    <tr id="<%= dom_id(todo_item) %>">
        <td>
          <% if todo_item.completed? %>
            <%= todo_item.completed_at %>
          <% else %>
            <%= link_to "Mark Complete", complete_shopping_list_shopping_item_path(todo_item), method: :patch %>
          <% end %>
        </td>
        <td><%= todo_item.content %></td>
        <td class="item__content">
          <%= link_to "Edit", edit_shopping_list_shopping_item_path(todo_item) %>
          <%= link_to "Delete", shopping_list_shopping_item_path(todo_item), method: :delete, data: { confirm: "Are you sure?"} %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>


<p>
  <%= link_to "New Shopping Item", new_shopping_list_shopping_item_path %>
</p>