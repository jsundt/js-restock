<p id="notice"><%= notice %></p>

<h1>Restock</h1>
<ul>
<% @categories.each do |category| %>
  <% if category.has_missing_items? %>
      <% category.items.restock.each do |item| %>
        <li><%= item.id %> – <%= item.title %> – <%= item.icon %> – <%= link_to 'update', change_stock_items_path(:id => item), remote: true %></li>
      <% end %>
  <% end %>
<% end %>
</ul>



